<h1>Chats</h1>
<div class= "search-form">
   <form action="#" method="GET" class="search-form">
    <input type="search" class="search-term" placeholder="Search for users">
    <a class="button-search" href="#"><i class="fa-solid fa-magnifying-glass"></i>Search</a>
    <%# <input type="submit" class="button-search" value="Search"> %>
  </form>
</div>
  <div id="users-show">

      <% if @chatrooms.empty? %>
        <h1>Start chatting!</h1>
      <% else %>
          <% @chatrooms.each do |chatroom| %>
            <div class="card-profile">
              <h3><%= link_to @chatroom_names[chatroom.id], chatroom_path(chatroom) %></h3>
            </div>
          <% end %>
      <% end %>
  </div>
