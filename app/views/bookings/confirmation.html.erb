<%= link_to request.referrer do %>
      <i class="fa-solid fa-circle-arrow-left"></i>
<% end %>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-6 mx-auto text-center">
      <h1>You have successfully joined this activity.</h1>
      <%= link_to "Add to Google Calendar", "https://calendar.google.com/calendar/r/eventedit?
        text=#{@booking.activity.title}
        &dates=#{@booking.activity.time.strftime('%Y%m%dT%H%M%S')}/#{@booking.activity.time.strftime('%Y%m%dT%H%M%S')}
        &ctz=#{@booking.activity.time.strftime('%Z')}
        &details=#{@booking.activity.description}
        &location=#{@booking.activity.location}", class: "btn btn-primary mt-3", target: "_blank" %>
    </div>
  </div>
</div>
