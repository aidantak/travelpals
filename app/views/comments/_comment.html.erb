<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-2">
      <%= link_to user_path(comment.user) do %>
        <%= cl_image_tag comment.user.photo.key, class: "rounded-circle img-fluid" %>
      <% end %>
    </div>
    <div class="col-md-10">
      <div class="card-body">
        <%= link_to comment.user.name, user_path(comment.user), class: "fw-bold" %>
        <p class="card-text mb-0"><%= comment.content %></p>
        <small class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</small>
      </div>
    </div>
  </div>
</div>
