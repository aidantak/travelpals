<div class="container mt-4">
  <div class="row g-4 flex-column">
    <div class="col-12">
      <%= cl_image_tag @activity.photos.first.key, class: "img-fluid" %>
    </div>
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center">
        <h3 class="mt-3"><%= @activity.title %></h3>
        <h3><strong><%= link_to "Join", "#" %></strong></h3>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <p><strong>Date: </strong><%= @activity.time.strftime('%A, %B %e, %Y at %l:%M %p') %></p>
      </div>
      <div class="d-flex justify-content-between align-items-center">
        <p><strong>Location: </strong><%=@activity.location %></p>
      </div>
      <div>
        <p><strong>Details:</strong></p>
        <p><%= @activity.description %></p>
      </div>
    </div>
  </div>
</div>

