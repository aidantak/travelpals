<% activity_title = activity.title.gsub(" ", "-") %>
<div data-map-index-target="card" data-lat="<%= activity.latitude %>" data-lng="<%= activity.longitude %>">
  <%= link_to activity_path(activity) do %>
    <div class="details-box" id="<%= activity_title %>">
      <%= cl_image_tag activity.photos.first.key, crop: :fill, class: "card-map-picture" %>
      <div class= "description-map">
        <h6 id="<%= activity_title %>" class= "title"><%= activity.title %></h6>
        <p class="date"><%= activity.time.strftime('%a, %b %e â€¢ %R') %></p>
      </div>
    </div>
  <% end %>
</div>
