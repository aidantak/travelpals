  <div class="container border">
    <div class="row g-4 mt-4">
      <h2>Index of activities</h2>
    </div>
  </div>

  <div class="container">
    <div class="row g-4 mt-4">
      <% @activities.each do |activity| %>
        <div class="col m-2 border rounded">
          <%= link_to activity, class: "text-decoration-none" do %>
            <%= cl_image_tag activity.photos[0].key, crop: :fill, class: "card-img-top" %>
              <div class="card profile-card-5">
                <div class="card-body pt-0">
                  <h5 class="card-title"><%= activity.title %></h5>
                  <p class="card-text"><%= activity.location %></p>
                  <%= raise %>
                </div>
              </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
